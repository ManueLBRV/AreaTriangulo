#include <iostream>

using namespace std;

int main()
{
    
    cout<<":)";
 std::cout << "Programa para calcular el area y perimetro de un triangulo equilatero :)" << std::endl;
 std::cout << "" << std::endl;
 std::cout << "ingresa la altura [h]" << std::endl;
 int h=0;
 std::cin >> h;
 std::cout << "ingresa la base [b]" << std::endl;
 int b=0;
 std::cin >> b;
 int area=0;
 area=(h*b)/2;
 int perimetro;
 perimetro=b*3;
 std::cout << "el perimetro es: ...  " << std::endl;
 cout << "  " ;
 std::cout << perimetro << std::endl;
 std::cout << "" << std::endl;
 std::cout << "el area es: ..." << std::endl;
 cout << "  ";
 std::cout << area << std::endl;
 
    return 0;
}
